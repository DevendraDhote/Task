<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <title>Document</title>
    <link rel="stylesheet" href="stylesheets/profile.css">
</head>
<body>

    <div class="main">
        <h1>Hello <%=data.name.charAt(0).toUpperCase() + data.name.slice(1)%> ðŸ‘‹</h1>
        <a href="/createpostpage">Create your post here..</a>
        <div class="cc">
        <% if(post.length>0){%>
            <% post.forEach(function(val){%>
                <div class="carddiv">
                    <div class="updiv">
                        <div class="img">
                            <img src="https://images.unsplash.com/photo-1517841905240-472988babdf9?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80" alt="">
                        </div>
                        <div class="txt">
                            <h2><%=val.userid.name%></h2>
                            <small><%= val.createdAt%></small>
                        </div>
                    </div>
                    <div class="matter">
                        <p><%= val.status%></p>
                    </div>
                    <button><i class="ri-heart-fill"></i></button>
                </div>
            <%})%>
        <%} else {%>
            <h1>No posts yet</h1>
        <%}%>
    </div>
    </div>

</body>
</html>